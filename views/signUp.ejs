<link rel="stylesheet" href="/css/signUp.css">



<div id = "container">

    <h3>SignUp</h3>

<form id = "form" action="/sign_up_post" method="post">

    <div class="text_fields"> 
         <label for="name">Name:</label>
        <input type = "text" placeholder="Enter your name..." id = "name" class="signIn" name = "name" required>
    </div>
  <div class="text_fields">
    <label for = "email" >Email:</label>
    <input type = "email" placeholder="Enter your email..." id = "email" class="signIn" name = "email" required>
</div>
     <div class="text_fields"> 
      <label for = "password">Password:</label>
      <input type = "password" id = "password" class="signIn"  name = "password" required>
    </div>

    <div class="text_fields">

        <label for = "confirm_password" >Confirm Password:</label>
        <input type = "password" id = "confirm_password" class="signIn" name = "confirm_password" required>

    </div>
 
    <div id = "submit_div">
        <input type = "submit" value = "SignUp">
    </div>
   
    


</form>

</div>